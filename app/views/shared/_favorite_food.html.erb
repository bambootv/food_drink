<div class="content-bottom wow fadeInLeft fav-form" data-wow-delay="0.4s" id="work">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-3">
        <div class="welcome_desc">
          <h3 class="text-center fav-food"><%= t "favorite_food" %></h3>
          <div class="course_demo">
            <ul id="flexiselDemo3">
              <% @products.each do |product| %>
                <li>
                  <%= image_tag(product.product_images.first.image,
                    size: Settings.image.size.favorite_food) %>
                  <div class="desc">
                    <h3><%= link_to product.name, product_path(product) %></h3>
                    <p><%= t "rating" %> <%= product.current_score.round(1) %></p>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
